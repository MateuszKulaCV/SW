<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maticzok.sw.MainActivity">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/username"
       android:text="USERNAME"
       android:textSize="30sp"
       android:layout_above="@+id/email"
       android:layout_centerHorizontal="true" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/userimage"
       android:layout_marginBottom="20dp"
       android:src="@android:drawable/star_big_off"
       android:layout_above="@+id/username"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Email: ogm@onet.pl"
       android:id="@+id/email"
       android:layout_marginTop="10dp"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"  />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text="Number:3332223232"
       android:id="@+id/numer"
       android:layout_below="@+id/email"
       android:layout_marginBottom="20dp"
       android:layout_alignStart="@+id/email" />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="All Posts"
       android:id="@+id/PostBtn"
       android:layout_below="@+id/numer"
       android:layout_toStartOf="@+id/userimage" />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Albums"
       android:id="@+id/AlbBtn"
       android:layout_below="@+id/numer"
       android:layout_toEndOf="@+id/userimage" />

</RelativeLayout>
